<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user' }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <%= f.text_field :first_name, class: "form-control form-control-user", placeholder: "First Name" %>
              </div>
              <div class="col-sm-6">
                <%= f.text_field :last_name, class: "form-control form-control-user", placeholder: "Last Name" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.email_field :email, class: "form-control form-control-user", placeholder: "Email Address" %>
            </div>

            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Password" %>
              </div>
              <div class="col-sm-6">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Confirm Password" %>
              </div>
            </div>

            <%= f.submit "Register Account", class: "btn btn-primary btn-user btn-block" %>
            
            <hr>
            <a href="javascript:void(0)" class="btn btn-google btn-user btn-block">
              <i class="fab fa-google fa-fw"></i> Register with Google
            </a>
            <a href="javascript:void(0)" class="btn btn-facebook btn-user btn-block">
              <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
            </a>
          <% end %>
          <hr>
          <div class="text-center">
            <a class="small" href="forgot-password.html">Forgot Password?</a>
          </div>
          <div class="text-center">
            <%= link_to "Already have an account? Login!", new_session_path(resource_name), class: "small" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
