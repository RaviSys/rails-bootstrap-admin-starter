<!DOCTYPE html>
<html>
  <head>
    <title>RailBootstrapAdminStarter</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Custom fonts for the admin theme-->
    <link 
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="page-top">
    <div id="wrapper">
      <%= render 'admin/shared/sidebar' %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%= render 'admin/shared/header' %>
          <!-- Begin Page Content -->
          <div class="container-fluid">
            <%= render "shared/flash" %>
            <%= yield %>
          </div>
          <!-- End Page Content -->
        </div>
        <%= render 'admin/shared/footer' %>
      </div>
    </div>
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>
    <%= render 'admin/shared/sign_out_modal' %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
